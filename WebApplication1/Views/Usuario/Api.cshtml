@model WebApplication1.Models.Usuario

@section Scripts{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/usuario")
}


@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Usuário</h4>    
    </div>
}
<table>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Codigo)
            </th>
            <th>Email </th>
            <th>Último Acesso </th>
            <th>Operações</th>
        </tr>
    </thead>
    <tbody data-bind="foreach: usuarios">
        <tr>
            <td data-bind="text: Codigo"></td>
            <td data-bind="text: Email"></td>
            <td data-bind="text: UltimoAcesso"></td>
            <td>
                <button>Editar</button>
                <button>Excluir</button>
            </td>
        </tr>
    </tbody>
</table>